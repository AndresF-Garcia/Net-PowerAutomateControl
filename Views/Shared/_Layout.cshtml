<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PowerAutomateControl.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sideMenu.css" asp-append-version="true" />
    
</head>
<body class="relative h-full">
    <header>
        <div class="bg-white shadow-md">
            <div class="flex w-full flex-wrap justify-between">
                <div>
                    <!--Espacio para boton de abrir menu en mobile-->
                </div>
                <!--Environment Selector-->
                <div id="currentEnvironment" class="w-auto py-3 pr-32 hover:bg-blue-400">
                    <div class="border-l-2 flex flex-col border-black pl-5">
                        <span style="font-size: 10px;">Entorno</span>
                        <span class="text-sm">Prueba</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!--Main content-->
    <div class="flex">
        <!--Side menu-->
        <nav class="sideMenu bg-gray-50">
            <ul>
                <!--toggle menu button-->
                <li class="sideMenu-item mb-2 cursor-pointer">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </li>

                <li class="sideMenu-item">
                    <a href="" aria-label="Soluciones">
                        <svg class="" fill="currentColor" aria-hidden="true" width="22"
                             height="22" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2a2 2 0 0 1 2 2v8h1V4.27c.6.34 1 .99 1 1.73v6.27c.6.34 1 .99 1 1.73v1.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 3 15.5V9a2 2 0 0 1 1-1.73V4c0-1.1.9-2 2-2h6ZM5 7h1.88a2 2 0 0 1 1.41.59l4.12 4.12a1 1 0 0 0 .59.28V4a1 1 0 0 0-1-1H6a1 1 0 0 0-1 1v3ZM4 9v6.5c0 .83.67 1.5 1.5 1.5h9c.83 0 1.5-.67 1.5-1.5V14a1 1 0 0 0-1-1h-1.88a2 2 0 0 1-1.41-.59L7.59 8.3A1 1 0 0 0 6.88 8H5a1 1 0 0 0-1 1Z"
                                  fill="currentColor"></path>
                        </svg>
                    </a>
                </li>

            </ul>
        </nav>

        <!--Content-->
        <div class="w-full overflow-y-auto" style="height: calc(100vh - 59px);">
            @RenderBody()
        </div>
    </div>

    <!--Environment selector-->
    <div id="environmentSideBar" class="border-t-2 border-l-2 absolute right-0 hidden w-72 border-gray-100 bg-white" style="height: calc(100vh - 59px); top:59px;">
        <!--Close button-->
        <div class="flex cursor-pointer justify-end" id="closeEnvironmentSideBar">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth="2.5" stroke="black" class="mr-2 size-7">
                <path strokeLinecap="round" strokeLinejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
        </div>
        <!--Add environment button-->
        <div class="flex cursor-pointer px-2 py-3 hover:text-blue-800" onclick="loadEnvironments()">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <p>Añadir entorno</p>
        </div>
        <hr>
        <!--My environments-->
        <div class="px-2 pt-2">
            <span class="text-base">Mis entornos</span>
            <div id="myEnvironmentsArea">
                <div class="px-1 py-2 hover:bg-gray-100">
                    <span class="text-sm">test-An</span>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Environments.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
